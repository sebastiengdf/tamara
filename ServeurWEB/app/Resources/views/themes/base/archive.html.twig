{% extends '@Cms/Cms/front'~ajax~'.html.twig' %}
{% block content %}
    <h1>{{ object.h1 }}</h1>
    <div class="row">

        <div class="col-md-3 col-md-push-9">
            {% include rootPath ~ ':sidebar-blog.hml.twig' %}
        </div>
        <div class="col-md-9 col-md-pull-3">
            <div id="archive" data-manager="{{ manager }}" data-slug="{{ object.slug }}" data-locale="{{ app.request.locale }}">
                <p><strong>{{ object.excerpt|raw }}</strong></p>
                {% include rootPath ~ '/partials-single:cover.html.twig' %}
                {{ include(template_from_string(object.content)) }}
                {% for item in items %}
                    {% include rootPath ~ '/partials-archive:archive-item.html.twig' with {'object': item} %}
                {% endfor %}
            </div>
            <p class="text-right">
                <button class="btn btn-primary" id="get-next-items"><i class="fa fa-plus"></i></button>
                <button class="btn btn-danger" id="stop-next-items" style="display: none;"><i class="fa fa-ban"></i></button>
            </p>
        </div>
    </div>



{% endblock content %}

