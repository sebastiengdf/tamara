{% set url = url('cms_post_show', {'_locale': app.request.locale, 'type' : type, 'slug': object.slug })|url_encode %}

<a class="btn btn-default" href="https://www.facebook.com/sharer/sharer.php?u={{ url }}" target="_blank">
    <i class="fa fa-facebook-square"></i>
    <span>Facebook</span>
</a>
<a class="btn btn-default" href="https://twitter.com/home?status={{ url }}" target="_blank">
    <i class="fa fa-twitter-square"></i>
    <span>Twitter</span>
</a>
<a class="btn btn-default" href="https://plus.google.com/share?url={{ url }}" target="_blank">
    <i class="fa fa-google-plus-square"></i>
    <span>Google Plus</span>
</a>
