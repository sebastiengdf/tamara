{% extends 'SonataAdminBundle:CRUD:list.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
		jQuery(document).ready(function() {
			$(".appearIframe").parent().hover(
				function() {
					var link = $( this ).find('a').attr("href");
					var objectElement = $( this );
					timeout = setTimeout(function(){
						$( objectElement ).parent().parent().parent().parent().css({'position':'relative', 'overflow':'inherit'})
						$( objectElement ).css({'position':'relative', 'overflow':'inherit'}).append('<div class="iframeRender" style="position:absolute; left:50px; top:0px; width:700px; height:500px; overflow:auto; z-index:9999999"><iframe src="' + link + '" width="100%" height="100%" style="height:100%; display:block;min-height: -webkit-fill-available; margin-bottom: 20px;" /></div>' );
					}, 1000);
					
				}, function() {
					clearTimeout(timeout);
					$( this ).find(".iframeRender").remove();
				}
			);
		});
	</script>
{% endblock %}

