{% extends '@User/User/user_edit.html.twig' %}

{% block form_user %}
    <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#identification" data-toggle="tab" aria-expanded="false">Identification</a></li>

            {% if securityAsGrantedAcces('ROLE_ADMIN') %}
                <li class=""><a href="#securite" data-toggle="tab" aria-expanded="false">Sécurité </a></li>
            {% endif %}

        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="identification">
                <div class="row">
                    <div class="col-md-4">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Général</h3>
                            </div>
                            <div class="box-body">
                                {{ form_row(form.username) }}
                                {{ form_row(form.email) }}
                                {{ form_row(form.plainPassword) }}
                                {{ form_row(form.enabled) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Identification</h3>
                            </div>
                            <div class="box-body">
                                {{ form_row(form.firstname) }}
                                {{ form_row(form.lastname) }}
                                {{ form_row(form.avatar) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Commentaire</h3>
                            </div>
                            <div class="box-body">
                                {{ form_row(form.content) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.tab-pane -->
            <div class="tab-pane" id="securite">
                <div class="row">
                    <div class="col-md-3">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Groupes</h3>
                            </div>
                            <div class="box-body">
                                {{ form_row(form.groups) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Rôles</h3>
                            </div>
                            <div class="box-body">
                                {{ form_row(form.roles) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.tab-pane -->
        </div>
    </div>
{% endblock form_user %}