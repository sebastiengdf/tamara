<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Contenu</h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
            </button>
        </div>
        <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        {% block edit_content %}
        {% if form.name is defined %}
            {{ form_row(form.name) }}
        {% endif %}
        {% if form.excerpt is defined %}
            {{ form_row(form.excerpt, {'attr':{'class':'codemiror-twig'}}) }}
        {% endif %}
        <div id="content">
            {% if form.content is defined %}
                {{ form_row(form.content) }}
            {% endif %}
        </div>
        {% endblock edit_content %}

    </div>
    <!-- /.box-body -->
</div>

<script>
    $(function () {
        CodeMirror.fromTextArea($('textarea[id$="content"]')[0], {
            theme: 'monokai',
            lineNumbers: true,
            mode: "xml",
            matchBrackets: true,
            autoCloseBrackets: true,
            autoCloseTags: true,
//            matchTags: true,
            htmlMode: true,
        });

        $('#content .CodeMirror').css('height', '950px');

    })
</script>