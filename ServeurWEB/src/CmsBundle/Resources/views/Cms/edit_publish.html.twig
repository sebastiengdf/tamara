<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Publication</h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
            </button>
        </div>
        <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        {% block edit_publish %}

            {% if form.published is defined %}
                {{ form_row(form.published) }}
            {% endif %}

            {% if form.noIndex is defined %}
                {{ form_row(form.noIndex) }}
            {% endif %}

            {% if form.publishedStart is defined %}
                {{ form_row(form.publishedStart) }}
            {% endif %}

            {% if form.publishedEnd is defined %}
                {{ form_row(form.publishedEnd) }}
            {% endif %}

        {% endblock edit_publish %}
    </div>
    <!-- /.box-body -->
</div>