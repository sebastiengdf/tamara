<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Propriété de post</h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
            </button>
        </div>
        <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        {% block post_edit_property %}
            {% if form.top is defined %}
                {{ form_row(form.top) }}
            {% endif %}
            {% if form.enableComment is defined %}
                {{ form_row(form.enableComment) }}
            {% endif %}
            {% if form.author is defined %}
                {{ form_row(form.author) }}
            {% endif %}
        {% endblock post_edit_property %}
    </div>
    <!-- /.box-body -->
</div>